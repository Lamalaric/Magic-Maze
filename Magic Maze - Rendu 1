#------------------------- Main Program -------------------------

if __name__ == '__main__':
	startTime = time.time()		# Secondes depuis 1970 (pour timer())


	creationMap(10,15)
	creationPion()
	creationObjet()
	caseVide(20)
	

	# valide = False
	# numero_action = 0
	# actuel = 1
	# affiche_actions(numero_action,"red")


	while 1:

		affichage()
		timer(3, 30, startTime)

		movePion(couleurChoisie)

		# prout()

			
		mise_a_jour()
		efface_tout()
