def perdu():

	while 1 :
		texte((nbCasesX//2+1)*largeur, (nbCasesY//2-1)*largeur, "Partie perdue", couleur="red", ancrage = "center", taille = 45)
		attente_clic()
		break	
	ferme_fenetre()




#------------------------- Main Program -------------------------

if __name__ == '__main__':
	startTime = time.time()		# Secondes depuis 1970 (pour timer())


	creationMap(10,15)
	creationPion()

